<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mapper.CommentMapper">

    <sql id="ct">Comment</sql>

    <sql id="commentMap">
            commentId,preCommentId,commentContent,
            commentUserId,commentArticleId,commentCreateTime
    </sql>

    <!--根据id查找评论-->
    <select id="selectCommentById" resultType="Comment">
        SELECT
        <include refid="commentMap"/>
        FROM
        <include refid="ct"/>
        WHERE
        commentId = #{commentId}
    </select>
    <!--添加评论-->
    <insert id="insertComment" parameterType="Comment" keyProperty="CommentId">
        insert into
        <include refid="ct"/>
        (
            <include refid="commentMap"/>
        )VALUES(
            #{commentId},
            #{preCommentId},
            #{commentContent},
            #{commentUserId},
            #{commentArticleId},
            #{commentCreateTime}
        )
    </insert>
    <!--根据id删除评论-->
    <delete id="deleteCommentById">
        DELETE FROM
        <include refid="ct"/>
        WHERE commentId = #{commentId}
    </delete>
    <!--根据文章id展示评论-->
    <select id="listCommentByArticle" resultType="Comment">
        SELECT
        <include refid="commentMap"/>
        FROM
        <include refid="ct"/>
        WHERE commentArticleId = #{articleId}
    </select>
    <!--根据用户展示评论-->
    <select id="listCommentByUser" resultType="Comment">
        SELECT
        <include refid="commentMap"/>
        FROM
        <include refid="ct"/>
        WHERE commentUserId = #{userId}
    </select>

</mapper>
